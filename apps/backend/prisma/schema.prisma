generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  COORDINATOR
  HR
  FACILITATOR
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  role      UserRole
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  facilitatorProfile Facilitator?

  @@index([role]) // Index for filtering users by role
  @@map("users")
}

model Participant {
  id         String   @id @default(cuid())
  email      String   @unique
  firstName  String
  lastName   String
  jobTitle   String?
  department String?
  location   String?
  hireDate   DateTime?
  status     String   @default("active")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  cohorts    CohortParticipant[]

  // Indexes for common queries
  @@index([hireDate])
  @@index([location])
  @@index([department])
  @@index([status])
  @@index([location, hireDate]) // Composite index for filtering by region AND hire date
  @@index([department, hireDate]) // Composite index for filtering by department AND hire date
  @@map("participants")
}

model Location {
  id        String   @id @default(cuid())
  name      String
  address   String?
  capacity  Int
  equipment String[]
  type      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  schedules Schedule[]

  @@map("locations")
}

model Facilitator {
  id               String   @id @default(cuid())
  userId           String   @unique
  qualifications   String[]
  availability     Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  schedules        Schedule[]

  @@map("facilitators")
}

model Program {
  id          String   @id @default(cuid())
  name        String
  description String?
  duration    Int
  objectives  String[]
  formData    Json?    // Store original wizard form data for editing
  archived    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sessions    Session[]
  cohorts     Cohort[]

  @@index([archived]) // Index for filtering active vs archived programs
  @@index([createdAt]) // Index for sorting by creation date
  @@map("programs")
}

model Session {
  id                 String   @id @default(cuid())
  programId          String
  title              String
  description        String?
  duration           Int
  materials          String[]
  order              Int
  participantTypes   String[] @default([])
  facilitatorSkills  String[] @default([])
  locationTypes      String[] @default([])
  requiresFacilitator Boolean @default(true)
  groupSizeMin       Int      @default(1)
  groupSizeMax       Int      @default(20)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  program     Program   @relation(fields: [programId], references: [id], onDelete: Cascade)
  schedules   Schedule[]

  @@map("sessions")
}

model Cohort {
  id          String   @id @default(cuid())
  programId   String
  name        String
  startDate   DateTime
  endDate     DateTime
  capacity    Int
  status      String   @default("scheduled")
  formData    Json?    // Store cohort configuration including participantFilters
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  program      Program             @relation(fields: [programId], references: [id], onDelete: Cascade)
  participants CohortParticipant[]
  schedules    Schedule[]

  @@index([programId]) // Index for fetching all cohorts in a program
  @@index([startDate]) // Index for sorting cohorts by start date
  @@index([status]) // Index for filtering by status
  @@index([programId, startDate]) // Composite for fetching program cohorts in chronological order
  @@map("cohorts")
}

model CohortParticipant {
  cohortId      String
  participantId String
  enrolledAt    DateTime @default(now())

  cohort        Cohort      @relation(fields: [cohortId], references: [id], onDelete: Cascade)
  participant   Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)

  @@id([cohortId, participantId])
  @@map("cohort_participants")
}

model Schedule {
  id            String   @id @default(cuid())
  cohortId      String
  sessionId     String
  facilitatorId String?
  locationId    String?
  startTime     DateTime
  endTime       DateTime
  status        String   @default("scheduled")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  cohort        Cohort       @relation(fields: [cohortId], references: [id], onDelete: Cascade)
  session       Session      @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  facilitator   Facilitator? @relation(fields: [facilitatorId], references: [id])
  location      Location?    @relation(fields: [locationId], references: [id])

  // Indexes for common schedule queries
  @@index([cohortId])
  @@index([sessionId])
  @@index([facilitatorId])
  @@index([locationId])
  @@index([startTime])
  @@index([status])
  @@index([cohortId, startTime]) // Composite for fetching cohort schedules in chronological order
  @@index([facilitatorId, startTime]) // Composite for facilitator availability queries
  @@map("schedules")
}
